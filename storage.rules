rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /test/{allPaths=**} {
      // 읽기 및 쓰기 권한: 요청을 보낸 사용자가 인증된 상태일 경우만 허용
      allow read, write: if request.auth != null;
      // 이렇게 하면 인증된 사용자는 /test/test.jpg, /test/uploads/doc.pdf 등에 접근 가능
    }

    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
